{
  "name": "andres-montanez/magallanes",
  "description": "A Deployment Tool for PHP Applications",
  "homepage": "http://magephp.com",
  "license": "MIT",
  "type": "library",
  "keywords": ["deployment"],
  "authors": [
    {
      "name": "Andrés Montañez",
      "email": "andresmontanez@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5.9",
    "monolog/monolog": "^1.0",
    "symfony/console": "^3.0",
    "symfony/filesystem": "^3.0",
    "symfony/finder": "^3.0",
    "symfony/yaml": "^3.0",
    "symfony/process": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Mage\\": "src/Mage/"
    },
    "exclude-from-classmap": [
      "**/Tests/"
    ]
  },
  "config": {
    "bin-dir": "bin"
  },
  "bin": ["bin/mage"]
}
